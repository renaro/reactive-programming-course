<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/people_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_16"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/people_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/see_all_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:layout_marginTop="@dimen/spacing_16"
        android:text="See All"
        android:textSize="14sp"
        android:textColor="#4545aa"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_16"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/selectableItemBackground"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_people"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/spacing_8"
        android:paddingStart="@dimen/spacing_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people_label"/>

        <TextView
            android:id="@+id/planets_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planets"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/list_people"
            android:layout_marginStart="@dimen/spacing_16"
            android:layout_marginTop="@dimen/spacing_16"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
        android:id="@+id/see_all_planets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_16"
        android:text="See All"
        android:textSize="14sp"
        android:textColor="#4545aa"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/spacing_16"
        app:layout_constraintTop_toTopOf="@id/planets_label"
        android:background="?attr/selectableItemBackground"
        />

        <android.support.v7.widget.RecyclerView
        android:id="@+id/list_planets"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
            android:paddingStart="@dimen/spacing_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planets_label"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>